<form class="theater-form" action="/edit/theatre/{{id}}" method="POST">
    <h1>Edit Theater</h1>

    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" name="title" value="{{title}}">
    </div>

    {{#if errors.title}}
    <section>
        <h6 class="notification-message">{{errors.title}}</h6>
    </section>
    {{/if}}

    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description">{{description}}</textarea>
    </div>

    {{#if errors.description}}
    <section>
        <h6 class="notification-message">{{errors.description}}</h6>
    </section>
    {{/if}}

    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="Image Url" value="{{imageUrl}}" name="imageUrl">
    </div>

    {{#if errors.imageUrl}}
    <section>
        <h6 class="notification-message">{{errors.imageUrl}}</h6>
    </section>
    {{/if}}

    <div class="check">
        <input type="checkbox" id="check-box" name="isPublic">
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>